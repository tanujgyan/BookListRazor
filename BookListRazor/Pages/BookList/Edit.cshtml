@page
@model BookListRazor.Pages.BookList.EditModel
<br />
<h2 class="text-info">Edit Book</h2>
<br />
<div class="border container" style="padding:30px">
    <form method="post">
        @*Add the validation for required fields*@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Book.Id" />
        <div class="=form-group row pt-3 mt-3">
            <div class="col-2">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            @*Add individual error messages*@
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="=form-group row pt-3 mt-3">
            <div class="col-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            @*Add individual error messages*@
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="=form-group row pt-3 mt-3">
            <div class="col-2">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            @*Add individual error messages*@
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="=form-group row pt-3 mt-3">
            <div class="col-3 offset-4 ">
                <input type="submit" value="Update" class="btn btn-success btn-lg form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-warning btn-lg form-control" asp-page="/BookList/Index">Back</a>
            </div>
        </div>
    </form>
</div>
@*Adding reference to this makes the validation client side*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}